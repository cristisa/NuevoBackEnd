{% extends 'base.html.twig' %}
  
{% block title %}Fichajes{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Fichajes</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_signin_new') }}"> 
                    Fichar Entrada 
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Hora de entrada</th>
                        <th>Ubicación</th>
                        <th>Cambios</th>
                        <th>Comentarios</th>
                        <th width="240px">Acciones</th>
                    </tr>
                    {% for signin in signins %}
                    <tr>
                        <td>{{ signin.hourSignIn }}</td>
                        <td>{{ signin.location }}</td>
                        <td>{{ signin.updated }}</td>
                        <td>{{ signin.comment }}</td>
                        {# <td>{{ signin.createdAt ? signin.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ signin.updatedAt ? signin.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td> #}
                            <form method="post" action="{{ path('app_signin_delete', {'id': signin.id}) }}" onsubmit="return confirm('¿Estás seguro que quieres borrar el registro?');">
                                <a
                                    class="btn btn-outline-info"
                                    href="{{ path('app_signin_show', {'id': signin.id}) }}">
                                    Ver fichaje
                                </a>
                                <a
                                    class="btn btn-outline-success"
                                    href="{{ path('app_signin_edit', {'id': signin.id}) }}">
                                    Editar fichaje
                                </a>
  
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ signin.id) }}">
                                <button class="btn btn-outline-danger">Borrar</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
  
{% endblock %}